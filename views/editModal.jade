mixin editModal
  .modal.fade#editModal(tabindex="-1", aria-labelledby="exampleModalLabel", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          h1.modal-title.fs-5#exampleModalLabel Edit Adventure
          button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
        .modal-body
          .d-flex.flex-column.gap-3
            div
              .form-label Country
              input.form-control.mt-1(placeholder="Enter visited country" type="text")
            div
              .form-label City
              input.form-control.mt-1(placeholder="Enter visited city" type="text")
            div
              .form-label Date
              input.form-control.mt-1(placeholder="Date of travel" type="text")
            div
              .form-label Duration
              input.form-control.mt-1(placeholder="Enter visited days" type="text")
            div
              .form-label Travel Style
              select.form-select(aria-label="Default select example")
                option(value="Adventure Travel") Adventure Travel
                option(value="Cultural Travel") Cultural Travel
                option(value="Luxury Travel") Luxury Travel
                option(value="Budget Travel") Budget Travel
        .modal-footer
          button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Cancel
          button.btn.btn-primary(type="button") Save