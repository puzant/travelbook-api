extends layout

block content
  div(style="padding: 30px")
    h1 Your Adventures

    .d-flex.gap-3
      each adventure in adventures
        .card.shadow-sm.border.border-primary-subtle(style='width: 20rem;')
          .card-body
            .d-flex.justify-content-between.align-items-center
              .d-flex.align-items-center.gap-1
                h5.card-title= `${adventure.city},`
                h5.card-title= adventure.country
              .d-flex.gap-3
                img(style="cursor: pointer" src='/images/edit.svg' data-bs-toggle="modal" data-bs-target="#editModel")
                img(style="cursor: pointer" src='/images/delete.svg' data-bs-toggle="modal" data-bs-target="#deleteModel")
            p.card-text= `Duration: ${adventure.duration} Days`
            p.card-text= `Date: ${adventure.date}`
            p.card-text= `Travel Style: ${adventure.travelStyle}`
    
    //- delete model
    .modal.fade#deleteModel(tabindex="-1", aria-labelledby="exampleModalLabel", aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            h1.modal-title.fs-5#exampleModalLabel Delete Adventure
            button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
          .modal-body
            p Are you sure you want to delete this adventure?
          .modal-footer
            button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Cancel
            button.btn.btn-danger(type="button") Yes

    //- edit model
    .modal.fade#editModel(tabindex="-1", aria-labelledby="exampleModalLabel", aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            h1.modal-title.fs-5#exampleModalLabel Edit Adventure
            button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
          .modal-body
            .d-flex.flex-column.gap-3
              div
                .form-label Country
                input.form-control.mt-1(placeholder="Enter visited country" type="text")
              div
                .form-label City
                input.form-control.mt-1(placeholder="Enter visited city" type="text")
              div
                .form-label Date
                input.form-control.mt-1(placeholder="Date of travel" type="text")
              div
                .form-label Duration
                input.form-control.mt-1(placeholder="Enter visited days" type="text")
              div
                .form-label Travel Style
                select.form-select(aria-label="Default select example")
                  option(value="1") one
                  option(value="1") one
          .modal-footer
            button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Cancel
            button.btn.btn-primary(type="button") Save